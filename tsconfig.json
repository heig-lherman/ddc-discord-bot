{
    "extends": "@sapphire/ts-config/extra-strict",
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom"
        ],
        "target": "esnext",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": "./",
        "outDir": "build",
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "paths": {
            "#src/*": [
                "./src/*"
            ]
        },
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    }
}
